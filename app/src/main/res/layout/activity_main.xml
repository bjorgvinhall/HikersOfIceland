<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <AbsoluteLayout
        android:id="@+id/absoluteLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/profile_image_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_x="350dp"
            android:layout_y="545dp"
            android:background="@color/profile_image_background"
            android:contentDescription="onclick listener to profile"
            android:foreground="@mipmap/profile_image_foreground"
            android:src="@color/profile_image_background" />

        <ListView
            android:id="@+id/main_listview"
            android:layout_width="match_parent"
            android:layout_height="525dp"
            android:layout_y="0dp"></ListView>


    </AbsoluteLayout>


</androidx.constraintlayout.widget.ConstraintLayout>