<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/reviewlist_button"
            android:layout_width="101dp"
            android:layout_height="46dp"
            android:layout_x="5dp"
            android:layout_y="66dp"
            android:text="Delete"
            app:backgroundTint="#8A8A8A" />

        <TextView
            android:id="@+id/reviewlist_rating"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:layout_x="5dp"
            android:layout_y="26dp"
            android:text="1"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/reviewlist_desc"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_x="35dp"
            android:layout_y="26dp"
            android:text="Review text"
            android:textSize="26dp" />
    </AbsoluteLayout>

</androidx.constraintlayout.widget.ConstraintLayout>