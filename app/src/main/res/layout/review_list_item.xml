<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/reviewListRating"
            android:layout_width="117dp"
            android:layout_height="21dp"
            android:layout_x="7dp"
            android:layout_y="48dp"
            android:src="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/reviewlist_button"
            android:layout_width="101dp"
            android:layout_height="46dp"
            android:layout_x="7dp"
            android:layout_y="155dp"
            android:text="Delete"
            app:backgroundTint="#8A8A8A" />

        <TextView
            android:id="@+id/reviewlist_user"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_x="5dp"
            android:layout_y="11dp"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/reviewlist_desc"
            android:layout_width="323dp"
            android:layout_height="83dp"
            android:layout_x="7dp"
            android:layout_y="69dp"
            android:text="Review text"
            android:textSize="26dp" />
    </AbsoluteLayout>

</androidx.constraintlayout.widget.ConstraintLayout>