<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="127dp"
            android:layout_height="43dp"
            android:layout_x="7dp"
            android:layout_y="167dp"

            android:onClick="locationPopup"
            android:text="Staðsetning" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="155dp"
            android:layout_y="170dp"

            android:onClick="floraPopup"
            android:text="Flóra" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="133dp"
            android:layout_height="36dp"
            android:layout_x="10dp"
            android:layout_y="78dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="rating" />

        <Button
            android:layout_width="127dp"
            android:layout_height="43dp"
            android:layout_x="268dp"
            android:layout_y="172dp"

            android:onClick="mountainsPopup"
            android:text="Fjöll" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="286dp"
            android:layout_y="73dp"
            android:text="Hæsta" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="184dp"
            android:layout_y="72dp"
            android:text="Lægsta" />
    </AbsoluteLayout>

</androidx.constraintlayout.widget.ConstraintLayout>