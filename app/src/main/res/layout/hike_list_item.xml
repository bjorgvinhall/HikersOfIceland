<?xml version="1.0" encoding="utf-8"?>
    <AbsoluteLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:id="@+id/hikelist_image"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/hikelist_name"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_x="125dp"
        android:layout_y="1dp"
        android:text="Nafn á hike"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/hikelist_location"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_x="126dp"
        android:layout_y="36dp"
        android:text="Staðsetning"
        android:textSize="16dp" />

    <Button
        android:id="@+id/hikelist_button"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_x="313dp"
        android:layout_y="56dp"
        android:text="View" />

    <ImageView
        android:id="@+id/hikelist_ratingImage"
        android:layout_width="117dp"
        android:layout_height="21dp"
        android:layout_x="124dp"
        android:layout_y="64dp"
        android:src="@mipmap/ic_launcher" />

</AbsoluteLayout>